{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Debug TypeScript",
			"runtimeArgs": [
				"--loader",
				"ts-node/esm"
			],
			"args": [
				"${workspaceFolder}/src/main.ts"
			],
			"sourceMaps": true,
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"cwd": "${workspaceFolder}"
		}
	]
}